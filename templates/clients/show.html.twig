{% extends 'base.html.twig' %}

{% block title %}
  Clients
{% endblock %}

{% block body %}
  <h1 class="title">
    My account
  </h1>

  <table class="table">
    <tbody>
      <tr>
        <th>
          First Name
        </th>
        <td>
          {{ client.firstName }}
        </td>
      </tr>
      <tr>
        <th>
          Last Name
        </th>
        <td>
          {{ client.lastName }}
        </td>
      </tr>
      <tr>
        <th>
          Email
        </th>
        <td>
          {{ client.email }}
        </td>
      </tr>
      <tr>
        <th>
          Telephone
        </th>
        <td>
          {{ client.telephone }}
        </td>
      </tr>
      <tr>
        <th>
          Address
        </th>
        <td>
          {{ client.address }}
        </td>
      </tr>
      <tr>
        <th>
          City
        </th>
        <td>
          {{ client.city }}
        </td>
      </tr>
      <tr>
        <th>
          Code
        </th>
        <td>
          {{ client.code }}
        </td>
      </tr>
      <tr>
        <th>
          AddressMore
        </th>
        <td>
          {{ client.addressMore }}
        </td>
      </tr>
      <tr>
        <th>
          Verified
        </th>
        <td>
          {{ client.isVerified ? 'Yes' : 'No' }}
        </td>
      </tr>
    </tbody>
  </table>

  <a href="{{ path('clients_index') }}">back to list</a>

  <a href="{{ path('clients_edit') }}">edit</a>

  {{ include('clients/_delete_form.html.twig') }}
{% endblock %}
