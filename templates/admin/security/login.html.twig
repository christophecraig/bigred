{% extends 'admin/base.html.twig' %}

{% block title %}
  Log in!
{% endblock %}

{% block body %}
<div class="columns">
<div class="column is-one-third
is-offset-one-third">
<div class="card">
<div class="card-content">
  <form method="post">
    {% if error %}
      <div class="alert alert-danger">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    {% endif %}

    {% if app.user %}
      <div class="mb-3">
        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
      </div>
      {% else %}
      <h1 class="title is-2">
      Sign in
    </h1>
    <div class="field">
      <label class="label" for="inputEmail">Email</label>
      <div class="control has-icons-right">
        <input type="email"
          value="{{ last_username }}"
          name="email"
          id="inputEmail"
          class="input"
          required
          autofocus />
        <span class="icon is-right">
          <i class="fas fa-envelope has-text-grey"></i>
        </span>
      </div>
    </div>
    <div class="field">
      <label class="label" for="inputPassword">Password</label>
      <div class="control has-icons-right">
        <input type="password"
          name="password"
          id="inputPassword"
          class="form-control input"
          required />
        <span class="icon is-right">
          <i class="fas fa-lock has-text-grey"></i>
        </span>
      </div>
    </div>
    <input type="hidden"
      name="_csrf_token"
      value="{{ csrf_token('authenticate') }}" />

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <div class="field buttons is-right">
      <button class="button is-primary mr-0" type="submit">Sign in</button>
    </div>
  </form>
  </div>
  </div>
  </div>
  </div>
    {% endif %}
{% endblock %}
